define useradd($name, $uid, $ssh_key_type, $ssh_key) {

    user { "$name":
        home       => "/home/$name",
        shell      => "/bin/bash",
        uid        => $uid,
        gid        => $uid,
        managehome => "true",
        groups => [],
    }
  
    group { "$name":
        gid => $uid,
    }
   
    ssh_authorized_key { "$ssh_key_name":
        user   => $name,
        ensure => present,
        type   => "ssh-rsa",
        key    => $ssh_key,
    }
    
}

